@{Layout = "_Layout";}

@using BestRestaurant.Models;

<h1>Cuisine</h1>
@if (@Model.Count == 0)
{
  <h3>No cuisines have been added yet!</h3>
}
@foreach (Cuisine cuisine in Model)
{
  <li><h3>@Html.ActionLink($"{cuisine.Type}", "Details", new{ id = cuisine.CuisineId})</h3></li>
}
<p>@Html.ActionLink("Home", "Index", "Home")</p>